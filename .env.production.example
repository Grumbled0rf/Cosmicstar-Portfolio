# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your production values
# NEVER commit .env.local to version control!

# ===========================================
# DATABASE
# ===========================================
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_32_CHAR_SECRET
JWT_EXPIRY=3600

# Generate these keys from your JWT_SECRET using:
# https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
# Or use the jwt.io debugger with your JWT_SECRET
ANON_KEY=CHANGE_ME_GENERATE_FROM_JWT_SECRET
SERVICE_ROLE_KEY=CHANGE_ME_GENERATE_FROM_JWT_SECRET

# ===========================================
# URLS - Update to your domain
# ===========================================
API_EXTERNAL_URL=https://api.yourdomain.com
SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SUPABASE_URL=https://api.yourdomain.com
NEXT_PUBLIC_SUPABASE_ANON_KEY=${ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SERVICE_ROLE_KEY}
SUPABASE_INTERNAL_URL=http://kong:8000

# ===========================================
# AUTHENTICATION OPTIONS
# ===========================================
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# SMTP / EMAIL (Optional but recommended)
# ===========================================
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_ADMIN_EMAIL=admin@yourdomain.com
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify

# ===========================================
# STUDIO (Supabase Admin Panel)
# ===========================================
STUDIO_DEFAULT_ORGANIZATION=Cosmicstar Technologies
STUDIO_DEFAULT_PROJECT=Cosmicstar CMS
STUDIO_PORT=3005

# ===========================================
# MISC
# ===========================================
NEXT_TELEMETRY_DISABLED=1
